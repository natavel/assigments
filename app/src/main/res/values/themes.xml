<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyApplication" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="RatingBar" parent="Widget.AppCompat.RatingBar">
        <item name="android:progressDrawable"> @drawable/ic_star</item>
        <item name="minHeight">13dp</item>
        <item name="maxHeight">13dp</item>
    </style>

    <style name="heading">
        <item name="android:fontFamily">@font/roboto_thin</item>
        <item name="android:layout_weight">900</item>
        <item name="android:textStyle">normal</item>
        <item name="lineHeight">40dp</item>
        <item name="android:textSize">40sp</item>
    </style>


</resources>